generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id          Int        @id @default(autoincrement())
  hp          String
  pass        String
  nama        String
  alamat      String
  idKecamatan String
  peran       user_peran @default(Reseler)
  hapus       Boolean    @default(false)

  @@index([hapus], map: "i_hapus")
}

enum user_peran {
  Reseler
  Agen
  Admin
}
